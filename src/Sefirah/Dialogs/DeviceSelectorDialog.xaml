<UserControl
    x:Class="Sefirah.Dialogs.DeviceSelectorDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Sefirah.Dialogs"
    xmlns:vm="using:Sefirah.ViewModels.Dialogs"
    xmlns:models="using:Sefirah.Data.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <ScrollViewer MaxHeight="300">
        <ItemsRepeater ItemsSource="{x:Bind ViewModel.Devices, Mode=OneWay}">
            <ItemsRepeater.Layout>
                <StackLayout Orientation="Vertical" Spacing="12" />
            </ItemsRepeater.Layout>
            <ItemsRepeater.ItemTemplate>
                <DataTemplate x:DataType="models:PairedDevice">
                    <CheckBox
                        Content="{x:Bind Name, Mode=OneWay}"
                        Tag="{x:Bind}"
                        Checked="DeviceCheckBox_Checked"
                        Unchecked="DeviceCheckBox_Unchecked" />
                </DataTemplate>
            </ItemsRepeater.ItemTemplate>
        </ItemsRepeater>
    </ScrollViewer>
</UserControl>
