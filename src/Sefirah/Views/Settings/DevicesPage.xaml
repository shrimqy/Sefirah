<Page
    x:Class="Sefirah.Views.Settings.DevicesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Sefirah.UserControls"
    xmlns:converters="using:Sefirah.Converters"
    xmlns:wctconverters="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dbModel="using:Sefirah.Data.AppDatabase.Models"
    xmlns:helpers="using:Sefirah.Helpers"
    xmlns:local="using:Sefirah.Views.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Sefirah.Data.Models"
    xmlns:vm="using:Sefirah.ViewModels.Settings"
    xmlns:wuc="using:CommunityToolkit.WinUI.Controls"
    x:Name="DevicePage"
    mc:Ignorable="d">

    <Page.Resources>
        <wctconverters:BoolToObjectConverter x:Key="BoolToConnectionButtonTextConverter"
            FalseValue="{helpers:ResourceString Name=Disconnected/Text}"
            TrueValue="{helpers:ResourceString Name=Connected/Text}" />

        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
        <wctconverters:EmptyObjectToObjectConverter x:Key="EmptyObjectToOpacityConverter" EmptyValue="1.0" NotEmptyValue="0.0" />
        <converters:EmptyObjectToBooleanConverter x:Key="EmptyObjectToFalseBooleanConverter" Inverse="True" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:BooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" Inverse="True" />
    </Page.Resources>

    <Page.DataContext>
        <vm:DevicesViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <ScrollViewer Padding="0,0,40,0">
        <StackPanel Spacing="8">
            <!--  Paired Devices Section  -->
            <TextBlock
                Margin="0,0,0,8"
                FontSize="24"
                FontWeight="SemiBold"
                Text="{helpers:ResourceString Name=PairedDevices/Title}"
                Visibility="{x:Bind ViewModel.PairedDevices.Count, Mode=OneWay, Converter={StaticResource CountToVisibilityConverter}}" />

            <ItemsRepeater ItemsSource="{x:Bind ViewModel.PairedDevices, Mode=OneWay}">
                <ItemsRepeater.Layout>
                    <StackLayout Orientation="Vertical" Spacing="8" />
                </ItemsRepeater.Layout>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="models:PairedDevice">
                        <wuc:SettingsExpander ItemsSource="{x:Bind ConnectedAdbDevices, Mode=OneWay}">
                            <wuc:SettingsExpander.Header>
                                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                    <Grid Width="30" Height="53">
                                        <Rectangle
                                            Opacity="0.5"
                                            RadiusX="4"
                                            RadiusY="4"
                                            Stroke="Black"
                                            StrokeThickness="2">
                                            <Rectangle.Fill>
                                                <SolidColorBrush Opacity="0.1" Color="{ThemeResource SystemBaseLowColor}" />
                                            </Rectangle.Fill>
                                        </Rectangle>
                                        <Rectangle
                                            Margin="2"
                                            RadiusX="4"
                                            RadiusY="4"
                                            Stroke="Black"
                                            StrokeThickness="1" />
                                        <Border Margin="3" CornerRadius="4">
                                            <Border.Background>
                                                <LinearGradientBrush Opacity="{x:Bind Wallpaper, Converter={StaticResource EmptyObjectToOpacityConverter}, Mode=OneWay}" StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Offset="0" Color="#FF0070FF" />
                                                    <GradientStop Offset="1" Color="#FF2E90FF" />
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <Image
                                                x:Name="WallpaperImage"
                                                x:Load="{x:Bind Wallpaper, Converter={StaticResource EmptyObjectToFalseBooleanConverter}, Mode=OneWay}"
                                                Source="{x:Bind Wallpaper, Mode=OneWay}"
                                                Stretch="UniformToFill" />
                                        </Border>
                                    </Grid>
                                    <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="{x:Bind Name, Mode=OneWay}" />
                                        <TextBlock Text="{x:Bind ConnectionStatus, Converter={StaticResource BoolToConnectionButtonTextConverter}, Mode=OneWay}" />
                                    </StackPanel>

                                </StackPanel>
                            </wuc:SettingsExpander.Header>
                            <wuc:SettingsExpander.Resources>
                                <Thickness x:Key="SettingsExpanderItemPadding">20,8,44,8</Thickness>
                            </wuc:SettingsExpander.Resources>
                            <wuc:SettingsExpander.ItemTemplate>
                                <DataTemplate x:DataType="models:AdbDevice">
                                    <wuc:SettingsCard HorizontalContentAlignment="Stretch" Header="{x:Bind DisplayName}">
                                        <wuc:SettingsCard.HeaderIcon>
                                            <FontIcon Glyph="&#xEBE8;" />
                                        </wuc:SettingsCard.HeaderIcon>

                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <Border
                                                Padding="8,4"
                                                Background="{ThemeResource AccentFillColorDefaultBrush}"
                                                CornerRadius="12">
                                                <TextBlock
                                                    FontSize="10"
                                                    FontWeight="SemiBold"
                                                    Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                                                    Text="{x:Bind TypeDisplay}" />
                                            </Border>
                                        </StackPanel>
                                    </wuc:SettingsCard>
                                </DataTemplate>
                            </wuc:SettingsExpander.ItemTemplate>

                            <wuc:SettingsExpander.ItemsHeader>
                                <Grid
                                    Padding="25,12"
                                    Background="{ThemeResource CardBackgroundFillColorDefault}"
                                    Visibility="{x:Bind HasAdbConnection, Mode=OneWay, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <FontIcon
                                        Grid.Column="0"
                                        Margin="0,0,16,0"
                                        VerticalAlignment="Center"
                                        Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                        Glyph="&#xE783;" />

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock FontWeight="SemiBold" Text="{helpers:ResourceString Name=AdbNoDevice}" />
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Text="{helpers:ResourceString Name=AdbNoDeviceSubtitle}"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Grid>
                            </wuc:SettingsExpander.ItemsHeader>

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Button Command="{Binding DataContext.OpenDeviceSettingsCommand, ElementName=DevicePage}" CommandParameter="{x:Bind}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon FontSize="14" Glyph="&#xE713;" />
                                        <TextBlock Text="{helpers:ResourceString Name=Settings}" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    VerticalAlignment="Stretch"
                                    Command="{Binding DataContext.RemoveDeviceCommand, ElementName=DevicePage}"
                                    CommandParameter="{x:Bind}">
                                    <FontIcon FontSize="14" Glyph="&#xE74D;" />
                                </Button>
                            </StackPanel>
                        </wuc:SettingsExpander>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>

            <!--  Discovered Devices Section  -->
            <TextBlock
                Margin="0,0,0,8"
                FontSize="24"
                FontWeight="SemiBold"
                Text="{helpers:ResourceString Name=AvailableDevices/Title}" />
            <TextBlock
                FontSize="14"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Text="{helpers:ResourceString Name=AvailableDevices/Subtitle}"
                TextWrapping="Wrap" />

            <ItemsRepeater ItemsSource="{x:Bind ViewModel.DiscoveredDevices, Mode=OneWay}">
                <ItemsRepeater.Layout>
                    <StackLayout Orientation="Vertical" Spacing="8" />
                </ItemsRepeater.Layout>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="models:DiscoveredDevice">
                        <wuc:SettingsCard Description="{x:Bind FormattedKey}" Header="{x:Bind DeviceName}">
                            <wuc:SettingsCard.HeaderIcon>
                                <FontIcon Glyph="&#xE8EA;" />
                            </wuc:SettingsCard.HeaderIcon>
                        </wuc:SettingsCard>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </StackPanel>
    </ScrollViewer>
</Page>
